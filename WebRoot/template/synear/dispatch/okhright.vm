<script language="javascript">
function ButtonSelectOk(i){
    var htmlcode = "";
    var htmlname = "";
    var htmlpk = "";
    var htmlpkcumand = "";
    var pk_deptdoc = "";
    var deptname = "";
    var pk_psnbasdoc = "";
    var psnname = "";
    var csalestruid = "";
    var vsalestruname = "";
    var pk_pricegroupcorp = "";
    if(document.getElementById('Checkbox'+i).checked == true){ 
       htmlcode=document.getElementById('username'+i).value;
       htmlname =document.getElementById('name'+i).value;
       htmlpk = document.getElementById('pk_cubasdoc'+i).value;
       htmlpkcumand = document.getElementById('pk_cumandoc'+i).value;
       pk_deptdoc = document.getElementById('pk_deptdoc'+i).value;
       deptname = document.getElementById('deptname'+i).value;
       pk_psnbasdoc = document.getElementById('pk_psnbasdoc'+i).value;
       psnname = document.getElementById('psnname'+i).value;
       csalestruid = document.getElementById('csalestruid'+i).value;
       vsalestruname = document.getElementById('vsalestruname'+i).value;
       pk_pricegroupcorp = document.getElementById('pk_pricegroupcorp'+i).value;
    }
    window.top.opener.document.getElementById("ocustname").value= htmlname;
    window.top.opener.document.getElementById("ocustcode").value= htmlcode;
    window.top.opener.document.getElementById("opkcubasdoc").value= htmlpk;
    window.top.opener.document.getElementById("opkcumandoc").value= htmlpkcumand;
    window.top.opener.document.getElementById("odeptid").value= pk_deptdoc;
    window.top.opener.document.getElementById("odeptname").value= deptname;
    window.top.opener.document.getElementById("osalerid").value= pk_psnbasdoc;
    window.top.opener.document.getElementById("osaler").value= psnname;
    window.top.opener.document.getElementById("osalezuzhicode").value= csalestruid;
    window.top.opener.document.getElementById("osalezuzhi").value= vsalestruname;
    window.top.opener.document.getElementById("opk_pricegroupcorp").value= pk_pricegroupcorp;
    window.top.close();
}
