	}
function GetDateString(){
        var MyDate=new Date();
        var Year=MyDate.getFullYear();
        var MonthNum=MyDate.getMonth();
        var Month;
        if(MonthNum<9){
            Month="0"+(MonthNum+1);
        }else{
            Month=MonthNum+1;
        }
        var Day=MyDate.getDate();
        if(Day<=9){
            Day="0"+Day;
        }
        var Today=Year+"-"+Month+"-"+Day;
	var a = '$!form_makedate';
	if(a==""){
        document.getElementById('makedate').value=Today;
	}else{
        document.getElementById('makedate').value='$!form_makedate';
	}
    }
    function todelete(url){
	if(confirm("确认要删除吗？")){
		document.form2.target="dataframe" ;
		document.form2.action=url;
		document.form2.submit();
	}
    }
</script>
