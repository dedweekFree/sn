<title>项目类型</title>
<script language="javascript">
	function s(){
	        if(form1.drivername.value == ""){
			alert("司机不能为空");
			form1.drivername.focus();
			return false;
		}
		form1.submit();
	}
	function s1(){
	        if(form2.vehiclename.value == ""){
			alert("司机描述为空");
			form2.vehiclename.focus();
			return false;
		}
		if(form2.vehiclenumber.value == ""){
			alert("司机编号为空");
			form2.vehiclenumber.focus();
			return false;
		}
		form2.submit();
	}
	function todelete(url){
	    if(confirm("确定要删除吗？")){
                 document.form1.action=url;
		 form1.submit();
	    }
	}
    function setVals(dm,mc,code) { 
      setVal(dm,mc);
      form1.ptypeid.value=dm;
      form1.ptypename.value=mc;
      form1.ptype.value=code;
    }
</script>
</head>

<body>
<form name="form1" method="post" action="insertdrivercontrol.aspx" target="dataframe">
<table class="datatable">
  <tr>
    <td colspan="4" align="left">添加司机
    </td>
  </tr>
  <tr class="search"> 
	<td class="tdlabel" width="10%">司机</td>
	<td class="tdinput" width="20%">
		<input type="text" name="drivername" value="$!form_drivername">	
		#foreach($!m1 in $driverbdcorpbyusername)
		<input type="hidden" name="drivercorp" value="$m1.PK_CORP">
		#end
	</td>
	</tr>
   <tr>
    <td colspan="4" align="right"><input type="button" name="button" class="bt1" value="提交" onclick="s()"/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    </td>
  </tr>
  </table>
  </form>
  <form name="form2" method="post" action="insertdrivernumber.aspx" target="dataframe">
<table class="datatable">
  <tr>
    <td colspan="4" align="left">添加汽车
    </td>
  </tr>
  <tr class="search"> 
	<td class="tdlabel" width="10%">汽车描述</td>
	<td class="tdinput" width="20%">
		<input type="text" name="vehiclename" value="$!form_drivername">
		#foreach($!m2 in $driverbdcorpbyusername)
		<input type="hidden" name="vehiclecorp" value="$m2.PK_CORP">
		#end
	</td>
	</tr>
   <tr>
   <tr class="search"> 
	<td class="tdlabel" width="10%">汽车编号</td>
	<td class="tdinput" width="20%">
		<input type="text" name="vehiclenumber" value="$!form_drivername">
	</td>
	</tr>
   <tr>
    <td colspan="4" align="right"><input type="button" name="button" class="bt1" value="提交" onclick="s1()"/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    </td>
  </tr>
  </table>
  </form>
  <table class="datatable">
  <tr class="trcolor">
    <td>名字</td>
    <td>操作</td>
  </tr>
  #set($i=0)
  #foreach($!m in $seldriver)
  <tr>
    <td align="center">$!m.DRIVERNAME</td>
    <td align="center"><a href="driveredit.aspx?id=$!m.ID">修改</a>&nbsp;&nbsp;&nbsp;<a href="#"  onclick="todelete('dirvercontroldel.aspx?id=$!m.ID')">删除</a></td>
  </tr>
  #set($i=$i+1)
  #end
</table>
<br>
  <table class="datatable">
  <tr class="trcolor">
    <td>汽车描述</td>
    <td>汽车编号</td>
    <td>操作</td>
  </tr>
  #set($j=0)
  #foreach($!m3 in $seldriverno)
  <tr>
    <td align="center">$!m3.VEHICLENAME</td>
    <td align="center">$!m3.VEHICLENUMBER</td>
    <td align="center"><a href="drivernumberedit.aspx?id=$!m3.ID">修改</a>&nbsp;&nbsp;&nbsp;<a href="#"  onclick="todelete('dirvernumberdel.aspx?id=$!m3.ID')">删除</a></td>
  </tr>
  #set($j=$j+1)
  #end
</table>
    <div>
    <iframe name="dataframe" src="" width="0" height="0"></iframe>
    </div>
</body>
</html>
