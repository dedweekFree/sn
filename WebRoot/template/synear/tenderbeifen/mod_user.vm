<title></title>
<script language = "javascript">
	function a(){				//修改用户
			if(document.all.update_roleid.value==document.all.newroleid.value){
				document.all.ddd.value=""
			}else{document.all.ddd.value="1"}
			updateuser.submit();
	}
	function setVals(dm,mc,code) {
	      setVal(dm,mc);
	      updateuser.ptype.value=code;
	      updateuser.ptypename.value=mc;
	      updateuser.ptypeid.value=dm;
	}
	function setValDepartment(dm,mc,code) {
	      setValDepart(dm,mc);
	      updateuser.ptype1.value=code;
	      updateuser.ptypename1.value=mc;
	      updateuser.tendtypeid1.value=dm;
	 }
	 function togettype(){
	     if(document.updateuser.update_roleid.value=='R7307'){
		 fenleiid.style.display="block";
	     }else{
	         fenleiid.style.display="none";
		 document.updateuser.ptype.value="";
	     }
	 }
	 function toblock(){
	     if('$!form_roleid' == 'R7307'){
	         fenleiid.style.display="block";
	     }else{
	         fenleiid.style.display="none";
	     }
	 }
</script>
 </head>
	 <body onload="toblock()">
		 <form name='updateuser' action ='updateUserSub.aspx' method='post'>
		 <input type="hidden" name="ent" value='$form_ent'>
		 <input type="hidden" name="dpt" value='$form_departid'>
			<table class="datatable" id='tab'>
			#set($i=0)
			#foreach($!m in $tendRole)
			  <tr class="trcolor">
			    <td>用户名:
			      <input type="text" name="username" value='$m.USERNAME'/>
			      <input type="hidden" name="usernametend" value='$m.USERNAME'/>
			      <input type="hidden" name="userid" value='$m.USERID'/>
				</td>
			    <td align="left">姓名:
				<input type="text" name="name" value='$m.NAME'/>
				<input type='hidden' name='up_dept_user' value=''>
				<input type="hidden" name="ddd" value=''/>
				</td>
			  </tr>
			  <tr class="trcolor">
			    <td>公司:
			      <select name="enterprisecode">
				   <option value=""></option>
				   #foreach($!h in $seltendenterprise)
					<option value="$!h.CHILDID" #if($m.ENTERPRISECODE==$h.CHILDID)selected#end>$!h.ENTERPRISENAME</option>
				   #end
				</select>
				</td>
			    <td align="left">&nbsp;
				</td>
			  </tr>
			  <tr>
			      <td align="center">部门分类</td>
			    <td align="left">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			    #if($!m.DEPARTID != "")
			        #foreach ($!k in $seltenddepart) 
				  #if($!m.DEPARTID == $!k.CHILDID)
				  <input type="text" name="ptypename1" value="$!k.DEPARTNAME" readonly>
				  #end
				#end
		            #else
                                <input type="text" name="ptypename1" value="" readonly>
			    #end
				<input type="hidden" name="ptype1" value="$!form_ptype1">
				<input type="hidden" name="tendtypeid1" value="$!form_tendtypeid1">
				<input type='button' name=bt class="bt1" value='选择' onclick="click_on_tree_selector_depart($F('ptypename1'),$F('dm_zzjg_tree_layer1'))">
				<div class="dtree" id="dm_zzjg_tree_layer1" style="position:absolute;width:300px;height:208px;visibility:Hidden;z-index:1"> 
				<table width="100%" border="1" cellspacing="0" cellpadding="0" height="100%"><tr><td>
					<IFRAME style="width:100%;height:100%" name="swjgdm_tree_frame" marginWidth=0 marginHeight=0 src="depart_tree.aspx" frameBorder=0 
						width="100%" height="100%" scrolling=auto BORDERCOLOR="#000000" ></IFRAME>
				</td></tr></table>
				</div>
				<script>
				   selector_layers[selector_layers.length]=document.all.dm_zzjg_tree_layer1;
				</script>	
				<input type="button" value="清除" class="bt1" onclick="toclear1()">
				<script language="javascript">
				    function toclear1(){
					document.updateuser.ptypename1.value="";
					document.updateuser.ptype1.value="";
					document.updateuser.tendtypeid1.value="";
				    }
				</script>
			     </td>
			  </tr>
			  <tr class="trcolor">
			    	<td colspan='2' align='left'><input type="hidden" name="newroleid" value='$m.ROLEID'/>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;角色:
				<select name='update_roleid' onchange="togettype()">
				<option value="">请选择角色</option>
				#set($i=0)
				#foreach($!k in $tendRolenamezb)
					<option value='$k.ROLEID' #if($!form_roleid==$!k.ROLEID) selected #end>$k.ROLENAME</option>
				#set($i=$i+1)
				#end
				</select>
			    </td>
			   </tr>
			<tr class="trcolor" id="fenleiid" style="display:none">
			<td>产品分类</td>
			<td align="left">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
			#if($!m.TENDTYPEID != "") 
				#foreach($!n in $seltendtypenew)  
					#if($!n.CHILDID == $!m.TENDTYPEID)
					    <input type="text" name="ptypename" value="$!n.TENDTYPENAME" readonly>
					    <input type="hidden" name="ptype" value="$!n.CHILDID">
					#end
				#end
		        #else
                             <input type="text" name="ptypename" value="" readonly>
			     <input type="hidden" name="ptype" value="">
			#end
			<input type="hidden" name="ptypeid" value="$!form_ptypeid">
			<input type='button' name=bt class='bt1' value='选择' onclick="click_on_tree_selector($F('ptypename'),$F('dm_zzjg_tree_layer'))">
			<div class="dtree" id="dm_zzjg_tree_layer" style="position:absolute;width:260px;height:208px;visibility:Hidden;z-index:1"> 
			<table width="100%" border="1" cellspacing="0" cellpadding="0" height="100%"><tr><td>
				<IFRAME style="width:100%;height:100%" name="swjgdm_tree_frame" marginWidth=0 marginHeight=0 src="class_tree.aspx" frameBorder=0 
					width="100%" height="100%" scrolling=auto BORDERCOLOR="#000000" ></IFRAME>
			</td></tr></table>
			</div>
			<script>
			   selector_layers[selector_layers.length]=document.all.dm_zzjg_tree_layer;
			</script>
			<input type="button" value="清除" class="bt1" onclick="toclear()">
			<script language="javascript">
			    function toclear(){
				document.updateuser.ptypename.value="";
				document.updateuser.ptype.value="";
				document.updateuser.ptypeid.value="";
			    }
			</script>
				</td>
			</tr>
			  <tr class="trcolor">
			    <td>
			      <input name="button" type="button" id="button" value="返回" onclick="javascript:history.back(-1)"/>
				</td>
			    <td>
				<input name="button" type="button" id="button" value="修改" onclick='a()'/>
				</td>
			  </tr>
			    #set($i=$i+1)
				#end
			</table>
		</form>
	</body>
